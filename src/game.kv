<Bar>:
  size: self.size
  pos: self.pos
  canvas:
    Color:
      rgba: 0,0,0,1
    Rectangle:
      size: self.size
      pos: self.pos

<BG>:
  size: self.size
  pos: self.pos
  canvas:
    Color:
      rgba: 1,1,1,1
    RoundedRectangle:
      pos: self.pos
      size: self.size
      radius: [self.r,self.r,self.r,self.r]

<Player>:
  size: self.size
  pos: self.pos
  canvas:
    Color:
      rgba: 1,0,0,1
    Ellipse:
      pos: self.pos
      size: self.size

<Tree>:
  size: self.size
  pos: self.pos
  canvas:
    Color:
      rgba: 1,1,1,1
    Rectangle:
      pos: self.pos
      size: self.size
      source: self.source

<Game>:
  player: player

  Player:
    id: player
    size: 100,100
    center: 100,0
